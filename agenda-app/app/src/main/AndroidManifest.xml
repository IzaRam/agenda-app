<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.izaram.agendaapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgendaApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.RegisterActivity"></activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ViewEnderecoActivity" />
        <activity android:name=".activity.AdicionarEnderecoActivity" />
        <activity android:name=".activity.AdicionarTelefoneActivity" />
        <activity android:name=".activity.ViewContatoActivity" />
        <activity android:name=".activity.AdicionarContatoActivity" />
        <activity android:name=".activity.ListaContatosActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>